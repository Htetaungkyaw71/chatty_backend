// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  name      String
  email     String    @unique
  password  String
  isAvater  Boolean   @default(false)
  avater    String
  messages   Message[]
  contacts   Contact[]
}

model Message {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  roomId    String
  text      String
  senderId  String
  sender    User     @relation(fields: [senderId], references: [id])
}

model Contact {
  id              String   @id @default(uuid())
  createdAt       DateTime @default(now())
  otherUserId     String
  otherUserName   String
  otherUserEmail  String   @unique
  otherUserAvater String
  belongToId      String
  belongTo        User     @relation(fields: [belongToId], references: [id])
}
